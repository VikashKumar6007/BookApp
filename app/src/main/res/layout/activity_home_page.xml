<?xml version="1.0" encoding="utf-8"?>


<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/back01"
    tools:context=".HomePage">


   <TextView
       android:id="@+id/TextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Welcome"
       android:textColor="@color/black"
       android:textSize="30dp"
       android:textStyle="bold"
       android:layout_marginStart="10dp"
       />

    <ImageView
        android:id="@+id/LogoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/poster0"
        android:layout_below="@+id/TextView"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:id="@+id/Course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@+id/LogoImg"
        android:text="Courses"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        />
    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/Liner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Course"
        >

    <androidx.cardview.widget.CardView

        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="30dp"
        android:id="@+id/card_view1"
        app:strokeWidth="5dp"
        app:strokeColor="@color/black"
        android:layout_margin="10dp"
        android:layout_below="@+id/Course">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:src="@drawable/poster1"
            android:id="@+id/c1" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:cardCornerRadius="30dp"
        android:id="@+id/card_view2"
        android:layout_margin="10dp"
        app:strokeWidth="5dp"
        app:strokeColor="@color/black"
        android:layout_marginLeft="300dp"
        android:layout_below="@+id/Course">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/poster2"
            android:id="@+id/c2" />
    </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"

        android:id="@+id/Liner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Liner1"
        >

        <androidx.cardview.widget.CardView

            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="30dp"
            android:id="@+id/card_view3"
            app:strokeWidth="5dp"
            app:strokeColor="@color/black"
            android:layout_margin="10dp"
            android:layout_below="@+id/Course">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:src="@drawable/poster3"
                android:id="@+id/c3" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:cardCornerRadius="30dp"
            android:id="@+id/card_view4"
            android:layout_margin="10dp"
            app:strokeWidth="5dp"
            app:strokeColor="@color/black"
            android:layout_marginLeft="300dp"
            android:layout_below="@+id/Course">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/poster4"
                android:id="@+id/c4" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/Liner3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Liner2"
            >

            <androidx.cardview.widget.CardView

                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardCornerRadius="30dp"
                android:id="@+id/card_view5"
                app:strokeWidth="5dp"
                app:strokeColor="@color/black"
                android:layout_margin="10dp"
                android:layout_below="@+id/Course">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/poster5"
                    android:id="@+id/c5" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:cardCornerRadius="30dp"
                android:id="@+id/card_view6"
                android:layout_margin="10dp"
                app:strokeWidth="5dp"
                app:strokeColor="@color/black"
                android:layout_marginLeft="300dp"
                android:layout_below="@+id/Course">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/poster6"
                    android:id="@+id/c6" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


</RelativeLayout>
    </ScrollView>